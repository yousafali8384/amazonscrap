<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
</head>
<style>
    .img-size {
        height: 350px;
    }
</style>

<body>
    <div class="container">
            <div class="card" style="
                width: 100%; 
        margin: 10px 0px;">

                <div class="card-body p-0">
                    <Strong>Average Price</Strong> &nbsp; $<%=avgPrice.avgPrice%>&nbsp;&nbsp;&nbsp;
                    <Strong>Average Ratings</Strong> &nbsp; <%=avgPrice.avgStar%> out of 5 stars&nbsp;&nbsp;&nbsp;
                    <Strong>Average Seller Rank</Strong> &nbsp;<% var b=new Number(avgPrice.avgBestSell);%>

                    <%=b.toLocaleString()%>
                </div>
            </div>
            <%items.forEach(function (item){%>
            <div class="row">
                <div class="col-md-8">
                    <div class="card" style="width: 100%; margin: 10px 0px; min-height: 227px">
                        <div class="card-body p-0">
                                <h6 style="
                                padding: 8px;
                                background: #ededed;
                            ">Product Details</h6>
                            <li class="media">
                                <a href="<%=item.link%>" target="_blank" style="text-decoration: none; color:inherit;">
                                    <img class="mr-3" src="<%=item.image%>" style="
                        padding: 5px;" width="165px" height="165px" alt="Generic placeholder image"></a>
                                <div class="media-body p-2">
                                    <a class="img-size" href="<%=item.link%>">
                                        <h5 class="mt-0 mb-1">
                                            <%=item.title%>
                                        </h5>
                                    </a>
                                    <h5><%=item.price%></h5>
                                    <h6><%=item.rattings%></h6>
                                    <%-item.description%>
                                </div>
                            </li>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card" style="width: 100%; margin: 10px 0px; min-height: 227px">
                            <h6 style="
                            padding: 8px;
                            background: #ededed;
                        ">Product Seller Rank</h6>
                        <%if (item.description != "" && item.description != undefined){%>

                       <span style="padding: 8px;"><%-item.description%></span>
                        <%}else{%>
                            <span style="padding: 8px;">No Seller Rank for this item.</span>

                            <%}%>
                    </div>
                </div>
            </div>
            <%})%>
    </div>
</body>

</html>